<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="subTask1" class="pack.SubTask">
        <property name="message" value="Do work!"/>
    </bean>

    <bean id="subTask2" class="pack.SubTask">
        <property name="message" value="Just do it!"/>
    </bean>

    <bean id="task1" class="pack.Task">
        <property name="name" value="TASK1"/>
        <property name="subTaskList">
            <list>
                <bean class="pack.SubTask">
                    <property name="message" value="subTask1"/>
                </bean>
                <bean class="pack.SubTask">
                    <property name="message" value="subTask2"/>
                </bean>
                <ref bean="subTask1"/>
                <ref bean="subTask2"/>
            </list>
        </property>
    </bean>
</beans>